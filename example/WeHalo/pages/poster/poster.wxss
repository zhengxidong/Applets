/* pages/poster/poster.wxss */
page{
    height: 100%;/*生效*/
}

.container{
    width: 100%;
    height: 100%;/*不生效*/
    background:#242424;
    text-align: center;
}

.button {
    background:#0a0a0a;
    border: 1px solid #adadad;
    color: #adadad;
    border-radius: 15px;
}

.text {
    font-size: 12px;
    color: #666666;
}

.buttons {
    position: relative;
    top: 70%;
}

.painter {
    position: absolute;
    top: 15%;
}

/**自定义导航栏**/
.nav {
    position: fixed;
    top: 0;
    /* background: url("https://blog.eunji.cn/upload/2018/11/code120181219113843975.png") no-repeat; */
    /* background-size: cover; */
    color: #fff;
    width: 100%;
    height: 150rpx;
    z-index: 1020;
}

.nav-text {
    position: absolute;
    top: 50%;
    left: 68rpx;
    font-size: 15px;
    color: #fff;
}

.return {
    z-index: 100;
    width: 36rpx;
    height: 36rpx;
    background-image:url('data:image/svg+xml;base64,');
    background-repeat:no-repeat; /** 不重复*/
    background-size:contain; /**等比例缩放*/
    z-index: 1030;
}

.nav-return {
    position: absolute;
    top: 52%;
    left:20rpx;
}

.message {
    position: absolute;
    top: 150rpx;
}